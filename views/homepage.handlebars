<div class="container" id="blog-container">
{{#each blogs as |blog|}}
<div class="container">
  <div class="card">
  <div class="card-body">
    <h5 class="card-title">{{blog.title}}</h5>
    <p class="card-text">Posted by: {{blog.user.username}}</p>
    <p class="card-text">On: {{format_date blog.date_created}}</p>
    <a href="/blog/{{blog.id}}" class="btn btn-primary">View Post</a>
  </div>
</div>
</div>
{{/each}}
</div>